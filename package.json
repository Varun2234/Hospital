{
  "name": "hospital-management",
  "type": "module",
  "version": "1.0.0",
  "description": "Hospital Management system",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" \"npm run start:ai-server\"",
    "dev:server": "nodemon server/server.js",
    "dev:client": "npm run dev --prefix client",
    "build:ai-model": "pip install -r ai_model/requirements.txt && python ai_model/gen_model.py",
    "start:ai-server": "python ai_model/app.py",
    "start:server": "node server/server.js",
    "start": "concurrently \"npm run start:server\" \"npm run start:ai-server\"",
    "build": "npm install --force --prefix client && npm install && npm run build:ai-model && npm run build --prefix client"
  },
  "author": "Varun",
  "license": "ISC",
  "dependencies": {
    "accesscontrol": "^2.2.1",
    "axios": "^1.10.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.14.1",
    "razorpay": "^2.9.6"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.10"
  }
}
